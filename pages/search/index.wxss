/* pages/search/index.wxss */
@import '/common/common.wxss';
@import '/common/iconfont.wxss';
.van-dropdown-menu{
  height:100rpx !important;
  background:transparent !important
}
.van-dropdown-menu__title{
  color:#fff !important
}
.search-area {
  padding: 20rpx 0;
  /* background:#fff */
}
.van-search{
  padding: 0rpx 30rpx !important;
}
.van-search__action--hover{
  background:transparent !important;
}
.van-search__content{
  border-radius: 38rpx !important;
}
.search-item{
  font-size: 26rpx;
  padding: 20rpx 0;
  border-bottom: 1px solid #eeeeee;
}
.search-area .search-top {
  display: flex;
  align-items: center;
}
.search-top .input-area {
  width: 100%;
  height: 68rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 0 0 25rpx;
  background: #fff;
  border-radius: 30rpx;
}
.input-area image {
  width: 35rpx;
  height: 35rpx;
  flex-shrink: 0;
}
.input-area .input {
  margin-left: 24rpx;
  flex: 1;
  font-size: 26rpx;
  color: #333;
  line-height: 33rpx;
}
.serch-icon{
  color: #fff;
  height: 68rpx;
  background: #004899;
  border-radius: 32rpx;
  font-size: 28rpx;
  line-height: 68rpx;
  padding: 0 30rpx;
}