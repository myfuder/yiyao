/* pages/service/yjjs/index.wxss */
@import '/common/common.wxss';
@import '/common/iconfont.wxss';
.search-area {
  padding: 20rpx 0;
  /* background:#fff */
}
.search-area .search-top {
  display: flex;
  align-items: center;
}
.search-top .input-area {
  width: 100%;
  height: 68rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 0 0 25rpx;
  background: #fff;
  border-radius: 30rpx;
}
.input-area image {
  width: 35rpx;
  height: 35rpx;
  flex-shrink: 0;
}
.input-area .input {
  margin-left: 24rpx;
  flex: 1;
  font-size: 26rpx;
  color: #333;
  line-height: 33rpx;
}
.fx-left{
  width:20%;
  /* background:#ff0; */
  height:100%;
  overflow: auto;
}
.fx-left text{
  font-size: 28rpx;
    padding: 30rpx 0;
    display: block;
    text-align: center;
    color: #777777;
}
.fx-right{
  width:80%;
  /* background:#f00; */
  height:100%;
  overflow: auto;
}
.type-active{
  font-weight: bold;
  background:#F4F8FB;
}
.radioCustom{
  padding:10rpx 0
}